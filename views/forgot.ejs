<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>forgot password</title>
		<style>
			form {
				min-width: 350px;
				max-width: 550px;
				margin: auto;
				padding: 2rem;
			}
		</style>
	</head>
	<body>
		<form method="post">
			<%if(typeof error_reset!='undefined' && error_reset.length>0){%> <% error_reset.forEach(function(error){%>
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				<%=error%>
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<% })%> <%}%> <%if(typeof success_reset!='undefined' && success_reset.length>0){%> <%
			success_reset.forEach(function(success){%>
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				<%=success%>
				<button type="button" class="close" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<% })%> <%}%>
			<div class="form-group">
				<label for="exampleInputEmail1">Email address</label>
				<input
					type="email"
					class="form-control"
					aria-describedby="emailHelp"
					name="email"
					placeholder="email"
				/>
				<button type="submit" class="btn btn-primary center">Send</button>
			</div>
		</form>
	</body>
</html>
